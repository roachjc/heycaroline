---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Mark from '../components/Mark.astro';
import Para from '../components/Para.astro';
import Main from '../components/Main.astro';
---

<Layout title="Hey, Caroline!" page="home">
  <Main>
    <Hero>
      <div class="max-w-2xl space-y-16 text-center relative lg:pt-8">
        <Header>
          Hey, <Mark>Caroline</Mark>!
        </Header>
        <Para>
          Hey, I’m Caroline! Your sister in digital marketing. I help businesses
          advertise on social media platforms like Facebook and Instagram.
        </Para>

        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/work"
            class="text-sm font-semibold leading-6 text-gray-900 z-10"
            >Learn more <span aria-hidden="true">→</span></a
          >
          <div class="absolute left-0 right-0 flex items-center justify-center">
            <svg
              class="w-44 stroke-current stroke-[0.1875rem] text-purple-400 animate-scribble"
              viewBox="0 0 176 55"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-dasharray="500"
              stroke-dashoffset="0"
              aria-hidden="true"
              ><path
                d="M28.0001 9.50003C34 6.00006 75.5 1.18613e-05 107 1.99997C138.5 3.99993 167 7.00013 172.5 23.5001C178 40 127 49 83.0001 52C39.0002 55.0001 -2.49983 51.0001 4.50007 31.5001C11.5 12 93.5 1.60145 123 7.00001"
              ></path></svg
            >
          </div>
        </div>
      </div>

      <img
        src="/caroline.jpeg"
        class="opacity-80 rounded-2xl rotate-6 w-60 lg:w-80"
      />
    </Hero>
  </Main>
</Layout>
